{
  "name": "defi-arb",
  "version": "1.0.0",
  "description": "Sistema de arbitragem na Polygon usando Graph API e flash loans",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "test": "node scripts/test.js",
    "deploy": "npx hardhat run scripts/deploy.js --network polygon",
    "deploy:mumbai": "npx hardhat run scripts/deploy.js --network polygonMumbai",
    "compile": "npx hardhat compile",
    "verify": "npx hardhat verify"
  },
  "keywords": [
    "defi",
    "arbitrage",
    "polygon",
    "flash-loans",
    "uniswap",
    "sushiswap",
    "quickswap"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@uniswap/v3-periphery": "^1.4.3",
    "axios": "^1.6.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "express": "^5.1.0",
    "graphql": "^16.8.1",
    "helmet": "^8.1.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "socket.io": "^4.8.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-verify": "^2.0.14",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
